@model IEnumerable<prjPermission.Models.UserCityViewModel>
@{
    Layout = null;
}

<div class="content">
    @Html.Action("SideBar", "Home")
</div>
<style>
    html {
        height: 100%;
    }
    /*
    body {
        overflow: hidden;
        background-image: radial-gradient(rgba(0,0,0,0), rgba(0,0,0,0.5));
    }*/

    .buttom {
        text-align: left;
