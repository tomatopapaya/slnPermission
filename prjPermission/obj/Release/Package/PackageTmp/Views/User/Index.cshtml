<body class="model-form">

    <div style="text-align: left;">

        <h3>使用者權限管理 :</h3>

        <a href="@Url.Action("Index","User")" class="buttom">依使用者</a>

        <a href="@Url.Action("Dept","User")" class="buttom2">依部門</a>

        <a href="@Url.Action("UserCreate","User")" class="btn btn-default" style="margin-left:30px">新增使用者</a>

    </div>

    <br />

    <form method="get" action="@Url.Action("Index","User")">
        <div style="text-align: left;">使用者帳號:  <input name="ID" type="text" /> 使用者名稱:   <input name="Name" type="text" /> <input type="submit" value="查詢" class="btn btn-default" /></div>
    </form>

    <br />
    <table class="table table-bordered table-hover" style="text-align: left; width:30%">
        <tr>
            <th>選擇</th>
            <th>使用者帳號</th>
            <th>使用者名稱</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td style="vertical-align: middle;"><a href="@Url.Action("UserEdit","User")?choose=@item.oGCUSER.USR_ID&&chooseName=@item.oGCUSER.USR_NAME" class="btn btn-primary">選擇</a></td>
                <td style="vertical-align: middle;">@item.sECCITY.USR_ID</td>
                <td style="vertical-align: middle;">@item.oGCUSER.USR_NAME</td>
            </tr>
        }
    </table>

</body>