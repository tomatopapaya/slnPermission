@model prjPermission.Models.GroupChooseViewModel
@{
    Layout = null;
    ViewBag.Title = "群組管理";
}

<div class="content">
    @Html.Action("SideBar", "Home")
</div>
<script src="~/Scripts/jquery-3.6.3.min.js"></script>
<style type="text/css">
    #Header {
        width: 360px;
        height: 80px;
        text-align: center;
        line-height: 80px;
        font-size: 15px;
        color: #fffaf3;
        font-weight: bold;
        background-color: #f9c81e;
    }

    #Sidebar {
        width: 120px;
        float: left;
        height: 280px;
        text-align: center;
        line-height: 280px;
        font-size: 15px;
        color: #ffffff;
        font-weight: bold;
        background-color: #cecece;
    }

    #body {
        width: 240px;
        height: 280px;
        text-align: center;
        line-height: 280px;
        font-size: 15px;
        color: #f9c81e;
        font-weight: bold;
        background-color: #fffaf3;
        float: left;
    }

    #Footer {
        width: 360px;
        height: 80px;
        text-align: center;
        line-height: 80px;
        font-size: 15px;
        color: #fffaf3;
        font-weight: bold;
        background-color: #f9c81e;
    }

    .table1, .td1, .th1 {
        border: 1.5px solid black;
    }

    .table1 {
        border-collapse: collapse;
        width: 40%;
    }

    .down {
        margin-top: 10px;
    }
</style>

<div class="model-form">
    <table style="text-align:left">
        <tr><th style="color:cornflowerblue">詳細資料</th></tr>
        <tr>
            <th>
                @Html.ActionLink("編輯", "Edit", new { DEPT_NO = TempData["DEPTNO"] }, new { @class = "btn btn-primary" })
                @Html.ActionLink("刪除", "Delete",
                    new { DEPT_NO = TempData["DEPTNO"] },
                    new { onclick = "return confirm('確定刪除嗎?');", @class = "btn btn-danger" }
               )
                <input type="button" class="btn btn-default" onclick="history.back()" value="返回">
                <br />
                <br />
            </th>
        </tr>
        <tr>
            <th>
                群組編號:
                @Model.ChooseDEPT.DEPT_NO
            </th>
            <th>
                群組名稱:
                @Model.ChooseDEPT.DEPT_NAME
            </th>
        </tr>
    </table>
    @*/////////////////這是選取後的顯示/////////////////////////////*@
    <br />
    
    <table class="table table-hover" style="width:50%">
        <tr><th>群組使用者:</th></tr>
        <tr style="background-color:deepskyblue;">
            <th>
                使用者編號
            </th>
            <th>
                使用者名稱
            </th>
        </tr>

        @if (ViewBag.GROUPUSER != null)
        {
            foreach (var item in ViewBag.GROUPUSER)
            {
                <tr style="background-color:white">
                    <td>@item.USER.USR_ID</td>
                    <td>@item.USER.USR_NAME</td>
                </tr>
            }
        }
    </table>
</div>