@model IEnumerable<prjPermission.Models.OGCDEPT>

@{
    Layout = null;
    ViewBag.Title = "群組管理";
}

<div class="content">
    @Html.Action("SideBar", "Home")
</div>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-3.6.3.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>


<body class="model-form">
    <br />
    <div style="display: flex; align-items: center;">
        <h2 style="margin: 0;">群組資訊　</h2>
        <a href="@Url.Action("Create", "Group")" class="btn btn-primary">新增</a>
    </div>
    <br />

    <div class="table-responsiv" style="text-align:left;width:45%">
        <table class="table table-hover">
            <tr style="background-color:deepskyblue">
                <th>
                </th>
                <th>
                    群組編號
                </th>
                <th>
                    群組名稱
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="vertical-align: middle">
                        @Html.ActionLink("選取", "choose", new { id = item.DEPT_NO }, new { @class = "btn btn-default" })
                    </td>
                    <td style="vertical-align: middle">
                        @item.DEPT_NO
                    </td>
                    <td style="vertical-align: middle">
                        @item.DEPT_NAME
                    </td>
                </tr>
            }
        </table>
    </div>
</body>


